{
  "compilerOptions": {
    "rootDir": "./src/",
    "baseUrl": "./",
    "lib": [
      "esnext",
      "dom",
    ],
    "moduleDetection": "force",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": false,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
  },
  "include": [
    "./src",
    "./types",
  ],
}
